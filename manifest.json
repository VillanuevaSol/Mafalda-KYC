{
  "name": "Mafalda",
  "description": "Insertá respuestas con atajos (snippets) y campos dinámicos. Macros de fecha y typeahead.",
  "version": "1.0.3",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://script.google.com/*",
    "*://*.adminml.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mafalda",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/pdf.min.js",
        "libs/pdf.worker.min.js",
        "libs/tesseract.min.js",
        "libs/tesseract.worker.min.js",
        "libs/tesseract-core.wasm"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}